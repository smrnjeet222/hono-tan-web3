{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["node"],
		"outDir": "./dist/",
		"rootDir": "./src/",
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules"]
}
